<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.chrisvle.rechordly">
    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-library android:name="com.google.android.wearable" />
    <supports-screens
        android:resizeable="false"
    android:smallScreens= "false"
    android:normalScreens="true"
    android:largeScreens="false"
    android:xlargeScreens="false"
    android:anyDensity= "false"
    />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:theme="@android:style/Theme.DeviceDefault"> -->

        <activity
            android:name=".CropFbActivity"
            android:label="@string/title_activity_crop_chooser" />
        <activity
            android:name=".EchoChooserActivity"
            android:label="@string/title_activity_volume_chooser" />

        <service
            android:name=".MessageService"
            android:label="Rechordly">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>
        <service
            android:name=".PhoneListener"
            android:label="Rechordly">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SliderNavActivity"
            android:label="@string/title_activity_slider_nav">
        </activity>
        <activity
            android:name=".SaveActivity"
            android:label="@string/title_activity_save">
        </activity>
        <activity
            android:name=".NameActivity"
            android:label="@string/title_activity_name">
        </activity>
        <activity
            android:name=".CropFrontActivity"
            android:label="@string/title_activity_main3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CropBackActivity"
            android:label="@string/title_activity_crop_back">
        </activity>
        <activity
            android:name=".SpeechToTextActivity"
            android:label="@string/title_activity_speech_to_text">
        </activity>
        <activity
            android:name=".GainChooserActivity"
            android:label="@string/title_activity_gain_chooser"></activity>
    </application>

</manifest>
